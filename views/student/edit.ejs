<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Editing: <%= student.firstName %> <%= student.lastName %></h1>
</div>

<div class="col py-3">
  <div class="row">
      <div class="col text-end fw-lighter">
          <b >Last Updated: <%= new Date(student.updatedAt).toUTCString() %></b>
          <b class="darrk">UserId: <%= student._id %></b>  
      </div>
  </div>
</div>

<form action="/edit/<%= student._id %>?_method=PUT" method="POST">

  <div class="row form-group mb-4 darrk">
      <div class="col ">
          <label for="Name">Name</label>
          <input type="text" class="form-control" id="Name" name="Name" value="<%= student.Name %>" placeholder="Name" required>
      </div>

      <div class="col">
          <label for="year">year</label>
          <input type="text" class="form-control" id="year" name="year" value="<%= student.year %>" placeholder="year" required>
      </div>
  </div>

  <div class="row form-group mb-4 darrk">
      <div class="col">
          <label for="tel">Registration no.</label>
          <input type="text" class="form-control" id="reg" name="reg" value="<%= student.reg %>" placeholder="Registration no." required>
      </div>

      <div class="col">
          <label for="email">Email</label>
          <input type="text" class="form-control" id="email" name="email" value="<%= student.email %>" placeholder="Email" required>
      </div>
  </div>

  <div class="form-group mb-4">
      <label for="details">Student Details</label>
      <textarea class="form-control" name="details" id="details" cols="30" rows="12" placeholder="Student Details"><%= student.details %></textarea>
  </div>

  <div class="form-group mb-4">
      <button type="submit" class="btn btn-success">Update Student</button>

      <button type="button" class="btn btn-danger" data-bs-toggle="modal" id="deleteButton" data-bs-target="#deleteModal">Delete Student</button>
  </div>

</form>

<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
  <div class="modal-dialog" role="document">
      <div class="modal-content">
          <div class="modal-header">
              <div class="modal-title">You are about to remove a student record.</div>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
              <p>
                  This will remove the student record of <b class="fw-bold"><%= student.firstName %> <%= student.lastName %></b><br/>
                  Are you sure?
              </p>
          </div>
          <div class="modal-footer">
              <button type="button" class="btn btn-dark" data-bs-dismiss="modal">Close</button>
              <form action="/edit/<%= student._id %>?_method=DELETE" method="POST" class="position-relative">
                  <button type="submit" class="btn btn-danger">Yes, Remove Student</button>
              </form>
          </div>
      </div>
  </div>
</div>
