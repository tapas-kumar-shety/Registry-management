<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Student</h1>
</div>

<form action="/add" method="POST">

  <div class="row form-group mb-4 darrk">
      <div class="col">
          <label for="firstName">First Name</label>
          <input type="text" class="form-control" id="firstName" name="firstName" value="" placeholder="First Name" required>
      </div>

      <div class="col">
          <label for="lastName">Last Name</label>
          <input type="text" class="form-control" id="lastName" name="lastName" value="" placeholder="Last Name" required>
      </div>
  </div>

  <div class="row form-group mb-4 darrk">
      <div class="col">
          <label for="tel">Telephone</label>
          <input type="text" class="form-control" id="tel" name="tel" value="" placeholder="Telephone" required>
      </div>

      <div class="col">
          <label for="email" >Email</label>
          <input type="text" class="form-control" id="email" name="email" value="" placeholder="Email" required>
      </div>
  </div>

  <div class="form-group mb-4 darrk ">
      <label for="details">Student Details</label>
      <textarea class="form-control" name="details" id="details" cols="30" rows="12" placeholder="Student Details"></textarea>
  </div>

  <div class="form-group mb-4">
      <button type="submit" class="btn btn-dark">Add Student</button>
  </div>

</form>
